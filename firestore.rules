
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Deny all writes by default, allow reads by default to authenticated users
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Deny all client-side writes by default
    }

    // Allow server-side (Cloud Functions) to write to the profiles collection
    match /profiles/{userId} {
        allow write: if get(/databases/$(database)/documents/functions/access/$(request.auth.uid)).data.canWrite == true;
    }

    // Allow users to create their own profile and transaction documents
    match /profiles/{userId} {
      allow create: if request.auth.uid == userId;
      
      match /transactions/{transactionId} {
        allow create: if request.auth.uid == userId;
      }
    }

    // Allow creating tasks if authenticated
    match /tasks/{taskId} {
        allow create: if request.auth != null;
    }
  }
}
