
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /profiles/{userId} {
      // Allow a user to read and update their own profile.
      allow read, update: if request.auth.uid == userId;
    }

    // Public collections are readable by any authenticated user.
    // Writes are disabled for now to prevent unauthorized changes.
    match /credit_packs/{packId} {
      allow list, get: if request.auth != null;
    }
    match /learning_modules/{moduleId} {
      allow list, get: if request.auth != null;
    }
    match /mentors/{mentorId} {
      allow list, get: if request.auth != null;
    }
    match /tasks/{taskId} {
      allow list, get: if request.auth != null;
    }
    match /templates/{templateId} {
      allow list, get: if request.auth != null;
    }
    
    // Fallback rule to deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
