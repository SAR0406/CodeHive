rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to update their own profile and create transactions for themselves.
    // Sensitive updates (like credits) are still handled by secure Cloud Functions.
    match /profiles/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read from other collections,
    // but keep writes locked down to be handled by Cloud Functions.
    match /{path=**}/ {
        allow read: if request.auth != null;
        allow write: if false;
    }
  }
}
