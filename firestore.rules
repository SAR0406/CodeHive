
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to READ from any top-level collection.
    // This is necessary for the UI to display data.
    match /{collection}/{docId} {
      allow read: if request.auth != null;
    }
    
    // Allow users to read their own transactions sub-collection.
    match /profiles/{userId}/transactions/{transactionId} {
        allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Writes are implicitly denied and must be handled by server-side
    // Cloud Functions, which have privileged access.
  }
}
