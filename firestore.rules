rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Profiles: Users can manage their own profile
    match /profiles/{userId} {
      allow read, update: if request.auth.uid == userId;
    }

    // Transactions: Users can create transactions for themselves
    match /profiles/{userId}/transactions/{transactionId} {
      allow create: if request.auth.uid == userId;
    }

    // Marketplace (Tasks): Any authenticated user can read tasks
    match /marketplace/{taskId} {
      allow read: if request.auth != null;
    }

    // Read-only collections
    match /credit_packs/{packId} {
      allow read: if request.auth != null;
    }
    match /learning_modules/{moduleId} {
      allow read: if request.auth != null;
    }
    match /mentors/{mentorId} {
      allow read: if request.auth != null;
    }
    match /templates/{templateId} {
      allow read: if request.auth != null;
    }
     // Internal collections should not be client-accessible
    match /internal/{docId} {
      allow read, write: if false;
    }
  }
}
