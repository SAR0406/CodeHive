
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORARY: Allow all authenticated users to read and write to all documents.
    // This is to resolve a persistent "internal" error and get the app functional.
    // This is NOT secure for production.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
