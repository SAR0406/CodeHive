rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to read data from any collection.
    // This is necessary for the UI to display tasks, templates, etc.
    match /{document=**} {
      allow read: if request.auth != null;
    }

    // Deny all writes from the client.
    // All data modifications must go through secure Cloud Functions.
    // This prevents the "FirebaseError: internal" and secures the database.
    match /{document=**} {
      allow write: if false;
    }
  }
}
